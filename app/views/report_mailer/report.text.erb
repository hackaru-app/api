<%= @title %>
<%= l(@report.start_date, format: '%F') %> - <%= l(@report.end_date, format: '%F') %>

--

<%= t('.projects') %>

<% totals = @report.totals %>
<% @report.projects.each do |project| %>
- <%= project.name %>: <%= hhmmss(totals[project.id]) %>
<% end %>

--

<%= t('.timers') %>

<% @report.activity_groups.each do |activity| %>
<% view_object = ActivityViewObject.new(activity) %>
- <%= view_object.description %>: <%= hhmmss(view_object.duration) %>
<% end %>
